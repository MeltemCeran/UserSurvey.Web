@model UserInsightSurvey.Models.Concrete.ProfileViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Profilim";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-8">
    <div class="w-full max-w-3xl">
        <h2 class="text-2xl font-bold text-indigo-700 mb-8 text-center">Profilim</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h4 class="text-lg font-semibold text-indigo-700 mb-4">Kullanıcı Bilgileri</h4>
                <form asp-action="Update" asp-controller="Profile" method="post" enctype="multipart/form-data" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-1">Ad</label>
                        <input name="Name" value="@Model.Name" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-1">Soyad</label>
                        <input name="Surname" value="@Model.Surname" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-1">E-posta</label>
                        <input name="Email" value="@Model.Email" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-1">Yeni Şifre (değiştirmek istemiyorsan boş bırak)</label>
                        <input name="Password" type="password" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-900 mb-1">CV Yükle</label>
                        <input name="CvFile" type="file" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
                        @if (!string.IsNullOrEmpty(Model.CvFilePath))
                        {
                            <div class="mt-1"><a href="@Model.CvFilePath" target="_blank" class="text-indigo-600 hover:underline text-xs">Mevcut CV'yi Görüntüle</a></div>
                        }
                    </div>
                    <button type="submit" class="w-full rounded bg-gradient-to-r from-indigo-600 to-purple-500 px-4 py-2 text-base font-semibold text-white shadow-sm hover:from-indigo-500 hover:to-purple-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Bilgilerimi Güncelle</button>
                </form>
            </div>
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h4 class="text-lg font-semibold text-indigo-700 mb-4">Verdiğim Anket Cevapları</h4>
                @if (Model.Answers != null && Model.Answers.Count > 0)
                {
                    <div class="overflow-x-auto">
                        <table class="min-w-full text-sm text-left">
                            <thead>
                                <tr class="bg-indigo-50">
                                    <th class="px-4 py-2 font-semibold text-gray-700">Soru</th>
                                    <th class="px-4 py-2 font-semibold text-gray-700">Cevabım</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var answer in Model.Answers)
                            {
                                <tr class="border-b last:border-0">
                                    <td class="px-4 py-2 align-top">@answer.QuestionText</td>
                                    <td class="px-4 py-2 align-top">
                                        @if (!string.IsNullOrEmpty(answer.AnswerText))
                                        {
                                            @answer.AnswerText
                                        }
                                        else if (!string.IsNullOrEmpty(answer.OptionContent))
                                        {
                                            @answer.OptionContent
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-gray-500">Henüz cevapladığınız bir anket yok.</p>
                }
            </div>
        </div>
    </div>
</div> 