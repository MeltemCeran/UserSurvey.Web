@model UserInsightSurvey.Models.Concrete.RegisterViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["PanelTitle"] = "Ekibimize Katılmaya Hazır mısın?";
    ViewData["PanelSubtitle"] = "Yeteneklerini ve deneyimlerini bizimle paylaş, seni daha yakından tanıyalım!";
    ViewData["PanelDescription"] = "Bu anket, işe alım sürecimizin ilk adımıdır. Bilgilerin, sana en uygun pozisyonu ve çalışma ortamını sunabilmemiz için değerlendirilecektir.";
    ViewData["PanelFooter"] = "Verdiğin bilgiler gizli tutulacak ve sadece değerlendirme amacıyla kullanılacaktır.";
}

@if (ViewData.ModelState != null && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
{
    <div class="mb-4 p-2 bg-red-100 text-red-700 rounded text-sm">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
<form asp-action="Register" enctype="multipart/form-data" method="post" class="space-y-5">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-900 mb-1"></label>
            <input asp-for="Name" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder:text-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
            <span asp-validation-for="Name" class="text-xs text-red-600"></span>
        </div>
        <div>
            <label asp-for="Surname" class="block text-sm font-medium text-gray-900 mb-1"></label>
            <input asp-for="Surname" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder:text-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
            <span asp-validation-for="Surname" class="text-xs text-red-600"></span>
        </div>
    </div>
    <div>
        <label asp-for="Email" class="block text-sm font-medium text-gray-900 mb-1"></label>
        <input asp-for="Email" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder:text-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
        <span asp-validation-for="Email" class="text-xs text-red-600"></span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-900 mb-1"></label>
            <input asp-for="Password" type="password" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder:text-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
            <span asp-validation-for="Password" class="text-xs text-red-600"></span>
            <div class="text-xs text-gray-500 mt-1 w-full">Şifreniz en az 6 karakter olmalı, büyük harf, küçük harf, rakam ve özel karakter içermelidir.</div>
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-900 mb-1"></label>
            <input asp-for="ConfirmPassword" type="password" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder:text-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
            <span asp-validation-for="ConfirmPassword" class="text-xs text-red-600"></span>
        </div>
    </div>
    <div>
        <label asp-for="CvFile" class="block text-sm font-medium text-gray-900 mb-1">CV Yükle</label>
        <input asp-for="CvFile" type="file" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
        <span asp-validation-for="CvFile" class="text-xs text-red-600"></span>
    </div>
    <div>
        <button type="submit" class="w-full rounded bg-gradient-to-r from-indigo-600 to-purple-500 px-4 py-2 text-base font-semibold text-white shadow-sm hover:from-indigo-500 hover:to-purple-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Kayıt Ol</button>
    </div>
</form>
<div class="mt-8 text-center text-sm text-gray-500 flex flex-col md:flex-row justify-center items-center gap-2">
    <span>Zaten üye misiniz?</span>
    <a asp-action="Login" class="font-semibold text-indigo-600 hover:text-indigo-500 ml-1">Giriş Yap</a>
    <span class="hidden md:inline">|</span>
    <a asp-area="" asp-controller="Admin" asp-action="Login" class="font-semibold text-indigo-600 hover:text-indigo-500 ml-1">Admin Girişi</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 