@model UserInsightSurvey.Models.Concrete.LoginViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["PanelTitle"] = "Tekrar Hoş Geldin!";
    ViewData["PanelSubtitle"] = "Hesabına giriş yaparak anket sürecine devam edebilirsin.";
    ViewData["PanelDescription"] = "Giriş bilgilerin sadece doğrulama ve güvenlik amacıyla kullanılacaktır.";
    ViewData["PanelFooter"] = "Bilgilerin gizli tutulur ve üçüncü kişilerle paylaşılmaz.";
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="mb-4 p-2 bg-red-100 text-red-700 rounded text-sm">@ViewData["ErrorMessage"]</div>
}
<form asp-action="Login" method="post" class="space-y-5">
    <div>
        <label asp-for="Email" class="block text-sm font-medium text-gray-900 mb-1"></label>
        <input asp-for="Email" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder:text-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
        <span asp-validation-for="Email" class="text-xs text-red-600"></span>
    </div>
    <div>
        <label asp-for="Password" class="block text-sm font-medium text-gray-900 mb-1"></label>
        <input asp-for="Password" type="password" class="block w-full rounded border border-gray-300 bg-white px-3 py-2 text-base text-gray-900 placeholder:text-gray-400 focus:border-indigo-500 focus:outline-none focus:ring-1 focus:ring-indigo-500" />
        <span asp-validation-for="Password" class="text-xs text-red-600"></span>
    </div>
    <div class="flex items-center mb-3">
        <input asp-for="RememberMe" class="form-check-input mr-2" />
        <label asp-for="RememberMe" class="form-check-label text-sm text-gray-700"></label>
    </div>
    <div class="flex flex-col md:flex-row gap-2 mt-4">
        <button type="submit" class="w-full rounded bg-gradient-to-r from-indigo-600 to-purple-500 px-4 py-2 text-base font-semibold text-white shadow-sm hover:from-indigo-500 hover:to-purple-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Giriş Yap</button>
        <a asp-action="Register" class="w-full rounded bg-white border border-indigo-600 px-4 py-2 text-base font-semibold text-indigo-600 hover:bg-indigo-50 text-center">Kayıt Ol</a>
    </div>
    <div class="mt-4 text-center">
        <a asp-action="ForgotPassword" class="text-sm text-indigo-600 hover:text-indigo-500">Şifremi Unuttum</a>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 